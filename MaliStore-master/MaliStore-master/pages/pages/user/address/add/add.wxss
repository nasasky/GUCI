.ui-row {
  color: #27323f;
  border-bottom: 2rpx solid #f5f5f5;
}
.ui-row input {
  width: 100%;
}
.address-picker {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}
.address-picker picker,
.address-picker .picker {
  width: 100%;
}
.address-picker .picker text {
  color: #999;
  font-size: 26rpx;
  padding-left: 2rpx;
  padding-right: 12rpx;
}
.address-button {
  width: 90%;
  margin: 0 auto;
  margin-top: 50rpx;
}
.address-button button {
  margin-bottom: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border: 0;
}
.address-button button::after {
  border: 0;
}
.address-button .save {
  color: #27323f;
  background-color: #ffd305;
}
.address-button .wechat {
  color: #ffffff;
  background-color: #1AAD16;
}
.address-button .delete {
  color: #ffffff;
  background-color: #e64440;
}
.address-button .cancel {
  color: #7b8196;
}
