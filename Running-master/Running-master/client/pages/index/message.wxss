@import 'index.wxss';
.main-content-title-head>image{
  position: relative;
  top: 0px;
}

/*评论区  */
.comment{
  margin-top: 15px;
  background-color: #fff;
  margin-bottom: 77px;
}

.comment-title{
  padding: 8px 0 8px 10px;
  font-family: "微软雅黑";
  font-size: 24rpx;
  border-bottom:1px solid #f3f6f8; 
  color:#aaaaaa;
}

.comment-body{
  display: flex;
  border-bottom: 1px solid #f3f6f8;
  padding-bottom: 15px;
}

.comment-head{
  flex: 1;
  padding-left: 10px;
  padding-top: 10px;
}

.comment-head>image{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  vertical-align: text-bottom;
}

.comment-content{
  margin-top: 10px;
}

.comment-content-head>text{
  display: block;
  padding-bottom:5px; 
  color: #333333;
}

.comment-content-head-body{
  color:#aaaaaa;
  font-size: 24rpx;
}

.comment-content{
  flex: 4;
  margin-right: 10px;
}

.comment-content-body{
  margin-top: 15px;
  color: #333333;
}

.comment-content-review{
  background-color: #e7f8fe;
  padding: 10px 20px 10px 10px;
  margin-top: 15px;
  color: #799197;
}

.comment-content-review-sign{
  color:#11aff1;
  float: right;
  margin-top: 10px;
}
.reply{
  font-weight: bold;
}

/*底部输入栏  */
.inputBottom{
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: #ffffff;
  padding:10px 0 10px ;
  border-top: 1px solid #f3f6f8; 
  text-align: center;
}

.inputBottom input{
  display: inline-block;
  border-bottom: 1px solid #1faa10;
  min-width: 70%;
  text-align: left;
}

.inputBottom button{
  display: inline-block;
  background-color: #1faa10;
  color: #fff;
  padding: 0 10px 0 10px;
  font-size: 26rpx;
  line-height: 2.0;
  margin-left: 20px;
}

.navigator-hover {
  background-color: rgba(0, 0, 0, 0.05); 
  opacity: 0.7; 
}