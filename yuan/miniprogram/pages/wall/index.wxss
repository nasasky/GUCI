/**index.wxss**/

page {
  /* background: #f6f6f6; */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.container{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  /* padding: 24rpx; */
  box-sizing: border-box;
}
.userinfo{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.nickname{
  font-size: 28rpx;
  color: #2b2b2b;
  margin: 12rpx 0;
}
.avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.sweethings{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding: 24rpx 6rpx;
  box-sizing: border-box;
  border-bottom: 12rpx solid #eee;
}
.sweethings .item{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.title{
  font-size: 24rpx;
  color: #666;
  text-align: center;
  padding: 6rpx;
}
.cont{
  font-size: 28rpx;
  color: #2b2b2b;
  text-align: center;
  padding: 12rpx;
}
.maxhappy{
  /* padding: 12rpx; */
  width: 100%;
  box-sizing: border-box;
  position: relative;
  min-height: 480rpx;
  border-bottom: 12rpx solid #eee;
  overflow: hidden;
}
.maxhappy .bg{
  opacity: .3;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
