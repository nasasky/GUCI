.search-body {
    position: absolute;
    width: 600rpx;
    height: 76rpx;
    margin: 0 auto;
    line-height: 76rpx;
    top: 30%;
    left: 50%;
    margin-left: -300rpx;
    color: white;
    border: 1rpx solid white;
    border-radius: 40rpx;
    /*border: 1px solid red;*/
}

.search-body input {
    display: inline-block;
    width: 500rpx;
    height: 76rpx;
    padding-left: 34rpx;
}

.search-body input::-webkit-input-placeholder {
    color: white;
}

.search-body-icon {
    position: absolute;
    top: 50%;
    right: 20rpx;
    height: 76rpx;
    margin-top: -30rpx;
    line-height: 76rpx;
}

.search-body-icon image {
    width: 38rpx;
    height: 38rpx;
}
