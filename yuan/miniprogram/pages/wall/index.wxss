.maxhappy .inner{
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  box-shadow:0 0 16rpx 0 rgba(255,255,255,.16) inset;
}
.maxhappy view{
  width: 100%;
  box-sizing: border-box;
}
.maxhappy .thing{
  font-size: 30rpx;
  color: #2b2b2b;
  text-align: right;
  padding-right: 48rpx;
  line-height: 60rpx;
}
.maxhappy .time{
  font-size: 28rpx;
  color: #2b2b2b;
  text-align: right;
  padding-right: 48rpx;
  line-height: 40rpx;
}
.maxhappy .addr{
  font-size: 28rpx;
  color: #2b2b2b;
  text-align: right;
  padding-right:48rpx;
  line-height: 40rpx;
}
.maxhappy .line{
  text-align: right;
  color: #666;
  line-height: 40rpx;
}
.maxhappy .txt{
  font-size: 30rpx;
  color: #2b2b2b;
  /* padding: 0 12rpx; */
  text-align: center;
  line-height: 60rpx;
}
.cusser{
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  padding: 0;
  box-sizing: border-box;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  box-shadow:0 0 4rpx 0 rgba(7, 59, 86, .16);
}
button[plain] {
  border:1px solid #1296db;
  background-color:transparent;
}
.button-hover[plain]{
  border:1px solid #1296db;
  background-color:transparent;
}
  
.cusser image{
  width: 40rpx;
  height: 40rpx;
  /* vertical-align: middle; */
}


