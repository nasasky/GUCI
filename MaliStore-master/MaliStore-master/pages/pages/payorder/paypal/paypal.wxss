.mask_wrap .photo {
  padding: 0;
  position: absolute;
  left: 10%;
  right: 10%;
  top: 40%;
  transform: translateY(-50%);
}
.mask_wrap .photo .input_view {
  width: 590rpx;
  height: 450rpx;
  background-color: #fff;
  border-radius: 6rpx;
}
.mask_wrap .photo .input_view .input-title {
  height: 90rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  color: #27323f;
  font-size: 30rpx;
}
.mask_wrap .photo .input_view textarea {
  width: 85%;
  height: 150rpx;
  border: 2rpx solid #f5f5f5;
  margin: 0 auto;
  padding: 20rpx;
  border-radius: 6rpx;
  color: #27323f;
  font-size: 30rpx;
}
.mask_wrap .photo .input_view button {
  width: 560rpx;
  margin-top: 40rpx;
  background-color: #ffd305;
  color: #27323f;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}
.mask_wrap .photo .ui-icon {
  display: block;
  text-align: center;
  font-size: 96rpx;
  color: #fff;
}
.mask_wrap .photo .icon_top {
  text-align: right;
}
.mask_wrap .photo .top_view {
  position: relative;
}
.mask_wrap .photo .top_view .top_line {
  position: absolute;
  bottom: 0px;
  right: 24px;
  width: 2px;
  height: 15px;
  background-color: #fff;
}
