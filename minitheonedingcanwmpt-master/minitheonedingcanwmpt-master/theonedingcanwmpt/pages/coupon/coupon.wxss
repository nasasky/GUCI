/*优惠劵*/

.demo {
	width:100%;
	margin:0 auto;
}
.stamp  {
	padding: 0;
	margin: 0;
	list-style:none;
	font-family:"Microsoft YaHei", 'Source Code Pro', Menlo, Consolas, Monaco, monospace;
}
.stamp {
	height: 250rpx;
	margin-bottom: 100rpx;
	position: relative;
	overflow: hidden;
}
.stamp:before {
	content: '';
	position: absolute;
	top:0;
	bottom:0;
	left:20rpx;
	right:20rpx;
	z-index: -1;
}
.stamp i {
	position: absolute;
	left: 20%;
	top: 90rpx;
	height: 190px;
	width: 780rpx;
	background-color: rgba(255, 255, 255, .15);
	transform: rotate(-30deg);
}
.stamp .par {
	float: left;
	padding: 25rpx 30rpx;
	width: 58%;
	border-right:4rpx dashed rgba(0, 0, 0, .3);
	text-align: left;
}
.stamp .par p {
	color:#fff;
	font-size: 32rpx;
	line-height: 30rpx;
}
.stamp .par span {
	font-size: 70rpx;
	color:#fff;
	margin-right: 10rpx;
	line-height: 130rpx;
}
.stamp .par .sign {
	font-size: 50rpx;
}
.stamp .par sub {
	position: relative;
	top:-5px;
	color:rgba(255, 255, 255, .8);
  font-size: 30rpx;
}
.stamp .copy {
	display: inline-block;
	padding:42rpx 28rpx;
	width:25%;
	vertical-align: text-bottom;
	font-size: 60rpx;
	color:rgb(255,255,255);
	text-align: center;
	line-height: initial;
}



