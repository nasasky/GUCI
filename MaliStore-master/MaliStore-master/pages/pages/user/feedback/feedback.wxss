page {
  background-color: #f5f5f5;
}
.feedback-picker-box {
  background-color: #fff;
  border-bottom: 10rpx solid #f5f5f5;
}
.feedback-picker-name {
  font-size: 28rpx;
  color: #27323f;
}
.feedback-picker {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.feedback-picker picker {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #27323f;
}
.feedback-picker .picker {
  height: 120rpx;
  width: 500rpx;
  display: flex;
  align-items: center;
}
.feedback-picker span {
  position: absolute;
  right: 50rpx;
}
.feedback-textarea-box {
  background-color: #fff;
  padding-top: 30rpx;
}
.feedback-textarea-box textarea {
  width: 88%;
  height: 300rpx;
  margin: 0 auto;
  border: 2rpx solid #f5f5f5;
  border-radius: 6rpx;
  padding: 10rpx;
  font-size: 28rpx;
  color: #27323f;
}
.feedback-phone-box {
  font-size: 28rpx;
  color: #27323f;
  background-color: #fff;
}
.feedback-button {
  background-color: #ffd305;
  width: 88%;
  height: 80rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 80rpx;
  border-radius: 4rpx;
  color: #27323f;
  font-size: 30rpx;
  margin-top: 30rpx;
}
