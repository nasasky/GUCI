/* 页面总配置  */
page{
  display: block;
  background:-webkit-gradient(linear, 0 0, 0 bottom, from(#f8f8f8), to(#e4e5e0));  
  min-height: 100%;
  font-size: 14px;
  font-family: "微软雅黑";  
}
.page__hd{
  padding-top: 40px;
  text-align: center;
}
.title{
  margin:10px auto;
  font-size: 18px;font-style:italic;
}
.content{
  margin-top:100px; 
  width: 80%;
  height: 300px;
  left: 10%;
  position: absolute;
  box-shadow:0px 6px 10px #aaa;
  border-radius:5px;
  background: #fff;
  text-align: center;
}
.head{
 overflow: hidden;
 display:block;
 position: relative;
 top:-35px;
 height: 80px;
 width: 80px;
 border-radius:50%; 
 margin:auto;
 box-shadow:0px 0px 10px #aaa;
}
.login{
  position: relative;
  top: 40px; 
  left: 15px;
  background: #fff;
  box-shadow:0px 0px 10px #aaa;
}
.login::after{
  border: none;
}