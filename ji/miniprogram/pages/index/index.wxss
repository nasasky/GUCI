/**index.wxss**/
.header{
  width:100%;
  height:125px;
  display: flex;
  position: relative;
  box-sizing: border-box;
}
.indexBGIMG{
  display: block;
  width: 100%;
  height:125px;
}
.userinfo-avatar-box{
  position: absolute;
  top: 55px;
  left: 50%;
  transform: translate(-35px, 35px);
  width: 70px;
  height: 70px;
  border-radius: 50%;
  z-index:999
}
.userinfo-avatar{
  width:100%;
  height:100%;
  border-radius: 50%;
}

.content{
  position: absolute;
  top: 125px;
  left: 0;
  padding-top: 35px;
  width: 100%;
  min-height: 75%;
  box-sizing: border-box;
}
.record{
  width: 100%;
}
.record-date{
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  background-image: radial-gradient(#e0e0e0 0%, #e0e0e0 50%, transparent 50%),
              linear-gradient(90deg, white 374rpx, #e0e0e0 374rpx, #e0e0e0 376rpx, white 376rpx);
  background-position: 50% 50%, 0px 0px;
  background-size:13px 13px, 100% 100%;
  background-repeat: no-repeat;

}
.record-date-text{
width: 50%;
height: 100%;
display: flex;
align-items: center;
justify-content: flex-end;
color: #c8c8c8;
font-family: 'PingFangSC-Medium', 'PingFang SC Medium', 'PingFang SC';
font-size: 12px;
padding-right: 10px;
box-sizing: border-box;
}
.record-date-statistics{
width: 50%;
height: 100%;
display: flex;
align-items: center;
justify-content: flex-start;
color: #c8c8c8;
font-family: 'PingFangSC-Medium', 'PingFang SC Medium', 'PingFang SC';
font-size: 12px;
padding-left: 30px;
box-sizing: border-box;
}
.record-item{
  width: 100%;
  height: 60px;
  background-image: linear-gradient(90deg, white 374rpx, #e0e0e0 374rpx, #e0e0e0 376rpx, white 376rpx);
  background-position:0px 0px;
  background-size:100% 100%;
  background-repeat: no-repeat;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.record-item-icon{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50% , -50%);
  width: 31px;
  height: 31px;
  border-radius: 50%;
}
.record-item-text{
  width:50%;
  box-sizing: border-box;
  padding-left:25px;
  height:100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  color: #c8c8c8;
  font-family: 'PingFangSC-Medium', 'PingFang SC Medium', 'PingFang SC';
  font-size: 12px;
}
.record-item-name{
  width:50%;
  box-sizing: border-box;
  padding-right:25px;
  height:100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #c8c8c8;
  font-family: 'PingFangSC-Medium', 'PingFang SC Medium', 'PingFang SC';
  font-size: 12px;
}
