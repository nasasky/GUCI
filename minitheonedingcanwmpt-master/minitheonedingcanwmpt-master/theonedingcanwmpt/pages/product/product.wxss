/*数量加减*/
.mon{
  display: flex;
  margin-top:20rpx;
  align-content: center; 
}
.yuan{
  flex: 0.9;
  /*display: inline-block;*/
  display: flex;
  align-items: center;
  color: red;

}

.stepper {
  text-align: right;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 200rpx;
  overflow: hidden;

border-radius:29rpx; 
  background: #FCFCFC
}
.stepper .op {
  /*background-color: #FF8C00;*/
  border: 1px solid #eee;
  border-radius:50%; 
  width: 26px;
  height: 26px;
  line-height: 26px;
  text-align: center;
  font-weight: 900;
  color: #000;
}

.stepper .oq {
  background-color: #FF8C00;
  border: 1px solid #eee;
  border-radius:50%; 
  width: 26px;
  height: 26px;
  line-height: 26px;
  text-align: center;
  font-weight: 900;
  color: #fff;
}
.stepper input {
  width: 30px;
  height: 25px;
  text-align: center;
}
.bottom{
  width: 100%;
  position: absolute;
  bottom: 0%;
  display: flex;
background: #eee;
height: 100rpx;
font-size: 32rpx;
}
.bottom_a{
  flex: 1;
  background: #eee;
  text-align: center;
  line-height: 100rpx;
}
.bottom_b{
    flex: 1;
    background: #FF8C00;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
}