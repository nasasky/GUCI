/**index.wxss**/
.swiper {
 height: 380rpx;
 width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}

.bless-name-img{
  width: 520rpx;
  margin-top: 35rpx;
  height: 26rpx;
}
.bless-name-txt{
  position: absolute;
  line-height: 90rpx;
   top: 0rpx; 
  left: 0;
  right:0;
  margin: auto;
  z-index: 90;
  color: rgb(218,192,148);
  letter-spacing: 2px;
}

.hide{
  display: none;
}

.slide-image{
  background-color: #eff;
}

.bless-name{
  position: relative;
  text-align: center;
  font-size: 18px;
  display: block;
  /* padding: 20rpx 0; */
  height: 90rpx;
  background-color: white;
  border-bottom: 1px #eee solid;
  color: #454545;
}

.bless-img {
  width: 100%;
  height: 200rpx;
  background-color: #eef;
}
.bless-img-box:nth-child(odd) {
  margin-right: 10rpx;
  padding-left: 30rpx;
  padding-right: 10rpx;
}
.bless-img-box:nth-child(even) {
  padding-left: 10rpx;
}
.bless-img-content{
  padding-left: 0rpx;
  padding-right: 0rpx;
  background-color: white;
  
}

.bless-title{
  display:block;
  text-align: center;
  font-size: 32rpx;
  padding-top: 9rpx;
  color: #4D4D4D;
  /* background-color: red; */
}
.bless-img-box{
  width: 330rpx;
  height: 280rpx;
  display: inline-block !important; 
  padding-bottom: 20rpx;
  margin-top: 20rpx;
}

.blesslist{
   background-color: #eee; 
}
.margin-grey{
  background-color: #eee;
  height: 20rpx;
  width: 100%;
}

.form-button{
  padding:0;
  margin:0;
  border:0;
  font-size:0;
  display: inline-block;
  background: none;
  width:100%;
  /* height:150rpx; */
  border-radius: 0;
}
.form-button::after{
  content:'';
  width:0;
  height:0;
  border:none;
  display: none;

}

.reward-txt{
  text-align: center;
  font-size: 32rpx;
  line-height: 80rpx;
  height: 80rpx;
  color: gray;
  display: block;
}