page {
  background-color: #ffffff;
}
.paypal-info-box {
  width: 100%;
  height: 100%;
}
.paypal-info-box .ui-tabs {
  height: 92rpx;
}
.paypal-info-box .info-header-box {
  width: 100%;
  margin: 0 auto;
  border-bottom: 2rpx solid #f5f5f5;
  height: 92rpx;
  background-color: #fff;
  position: fixed;
  z-index: 99;
}
.paypal-info-box swiper {
  height: 100%;
  padding-top: 92rpx;
  position: relative;
}
.info-content-header-box {
  background-color: #f9f9f9;
  color: #7b8196;
}
.info-content-box {
  border-bottom: 2rpx solid #f5f5f5;
}
.info-content-box .ui-row {
  color: #27323f;
  font-size: 26rpx;
}
.info-content-box .info-text {
  background-color: #f9f9f9;
  height: 50rpx;
  width: 95%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
  font-size: 26rpx;
  color: #7b8196;
  border-radius: 6rpx;
}
.info-content-box .info-text text {
  color: #27323f;
}
.no-more-goods {
  width: 100%;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.no-more-goods .no-order-img {
  width: 200rpx;
  height: 200rpx;
}
.no-more-goods .text {
  font-size: 26rpx;
  color: #bfbfbf;
}
