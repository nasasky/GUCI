page {
  background-color: #f5f5f5;
}
.favorite-list-box {
  background-color: #fff;
}
.favorite-list-img {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.favorite-list-img image {
  width: 80%;
  height: 80%;
  border-radius: 4rpx;
}
.favorite-list-box .times {
  font-size: 22rpx;
  color: #7b8196;
}
.favorite-list-box .price {
  color: #ffd305;
  font-size: 32rpx;
}
.favorite-list-box .goods-name {
  color: #27323f;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 30rpx;
}
.favorite-list-box .goods-info {
  color: #7b8196;
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.no-more-goods {
  width: 100%;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.no-order-img {
  width: 200rpx;
  height: 200rpx;
}
.no-more-goods .text {
  font-size: 26rpx;
  color: #bfbfbf;
}
